@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--En el validation-summary es donde se pindan los errores-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Category" />
            <div class="form-group mt-2">
                <!--Boton de tipo submit que dispara el post-->
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
